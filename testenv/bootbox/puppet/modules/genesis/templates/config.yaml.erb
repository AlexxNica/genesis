---
:ipxe:
    :images:
        :initrd: <%= @ipxe_initrd %>
        :kernel: <%= @ipxe_kernel %>
    :kernel_flags: <%= @ipxe_kernel_flags %>
    :menu_default: intake
    :image_server: http://<%= @image_service %>/genesis
:genesis_server: http://<%= @genesis_service %>
:tasks_url: http://<%= @genesis_ipaddress %>:8888/tasks
:yum_repos:
    :epel:
        :label:   "[epel]"
        :name:    "epel"
        :descr:   "Epel"
        :baseurl: "<%= @rpm_base_url %>"
        :enabled:   1
        :priority:  1
        :gpgcheck:  0
:gem_files:
    "genesis_framework": http://<%= @genesis_ipaddress %>:8888/gem/genesis_framework
:collins:
    :host: <%= @collins_url %>
:ntp_server: <%= @ntp_server %>
